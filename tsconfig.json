{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "inlineSources": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "WebWorker",
      "ESNext",
    ],
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "dist"
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "public"
  ],
}